<article class="tag-card {{tag_class}}">
    <a class="tag-card-link" href="{{tag.url}}">
        {{#if tag.feature_image}}
            <figure class="tag-card-image">
                <img
                    srcset="{{img_url tag.feature_image size="xs" format="webp"}} 160w,
                            {{img_url tag.feature_image size="s" format="webp"}} 320w,
                            {{img_url tag.feature_image size="m" format="webp"}} 600w,
                            {{img_url tag.feature_image size="l" format="webp"}} 960w,
                            {{img_url tag.feature_image size="xl" format="webp"}} 1200w,
                            {{img_url tag.feature_image size="xxl" format="webp"}} 2000w"
                    sizes="{{#if tag.imageSizes}}{{tag.imageSizes}}{{else}}320px{{/if}}"
                    src="{{img_url tag.feature_image size="m"}}"
                    alt="{{#if tag.feature_image_alt}}{{tag.feature_image_alt}}{{else}}{{tag.name}}{{/if}}"
                    loading="lazy"
                >
            </figure>
        {{/if}}
        <div class="tag-card-wrapper">
            <h3 class="tag-card-title is-title">{{tag.name}}</h3>
            {{#if tag.description}}
                <p class="tag-card-excerpt is-body">{{tag.description}}</p>
            {{/if}}
        </div>
    </a>
</article>
